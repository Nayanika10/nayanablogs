div.navbar.navbar-default.navbar-static-top
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='$ctrl.isCollapsed = !$ctrl.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') naynablogs

    div#navbar-main.navbar-collapse.collapse(uib-collapse='$ctrl.isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in $ctrl.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}

        li(ng-show='$ctrl.isAdmin()', ui-sref-active='active')
          a(ui-sref='admin') Admin

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='$ctrl.user')
          a(ng-click='$ctrl.register()') Sign up

        li(ng-hide='$ctrl.user')
          a(ng-click='$ctrl.LoginService.open()') Login

        li(ng-show='$ctrl.user')
          p.navbar-text Hello {{$ctrl.user.username}}

        li(ng-show='$ctrl.user')
          a(ng-click='$ctrl.logout()') Logout
